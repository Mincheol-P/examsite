{{> _header}}

<!-- 상단 타이틀/버튼: 좌측 제목, 우측 '새 공지', 스크롤 시 상단 고정 -->
<div class="position-sticky top-0 bg-white pt-2 pb-3 mb-4 border-bottom" style="z-index: 10;">
    <div class="d-flex align-items-center justify-content-between">
        <h2 class="h3 m-0">공지사항</h2>
        <a href="/notice/new" class="btn btn-primary btn-lg px-4">새 공지</a>
    </div>
</div>

<!-- 목록 영역 -->
<ul class="list-group list-group-flush">
    {{#items}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                {{#pinned}}<span class="badge text-bg-warning me-3">★</span>{{/pinned}}
                <a href="/notice/{{id}}/view" class="link-body-emphasis text-decoration-none fw-semibold">
                    {{title}}
                </a>
            </div>
        </li>
    {{/items}}
    {{^items}}
        <li class="list-group-item text-center text-muted py-5">
            등록된 공지가 없습니다.
        </li>
    {{/items}}
</ul>

{{> _footer}}
